<h1>{{product.title}}</h1>
<h4>ID:{{product._id}}</h4>

<img style="height: 300px; width: 300px;" src="{{product.thumbnails}}" alt="{{product.title}}" />

<p>{{product.description}}</p>
<p>Precio: ${{product.price}}</p>

<form id="addToCartForm" data-pid="{{product._id}}">
  <label for="cid">ID del carrito:</label>
  <input type="text" name="cid" id="cid" required placeholder="Ingresa tu CID" />

  <button type="submit">Agregar al carrito</button>
</form>

<script src="/ProductDetailLogic.js"></script>
